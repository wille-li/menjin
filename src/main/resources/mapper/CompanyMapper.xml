<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper  
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- SQL 关键字请使用大写字母, 表名, 属性名用小写 -->
<mapper namespace="com.menjin.company.mapper.CompanyMapper">
	<resultMap type="com.menjin.company.model.Company" id="resultMap">
		<id column="id" property="id" jdbcType="INTEGER" javaType="java.lang.Integer" />
		<result column="company_name" property="companyName" jdbcType="VARCHAR" />
		<result column="company_addr" property="companyAddress"
			jdbcType="VARCHAR" />
		<result column="company_mobile" property="companyPhone"
			jdbcType="VARCHAR" />
		<result column="created_time" property="createTime" jdbcType="TIMESTAMP" />
		<result column="created_by" property="createBy" jdbcType="VARCHAR" />
		<result column="modified_date" property="modifiedDate"
			jdbcType="TIMESTAMP" />
	</resultMap>

	<resultMap type="com.menjin.company.model.Company" id="resultDepartmentMap">
		<id column="com_id" property="id" jdbcType="INTEGER" javaType="java.lang.Integer" />
		<result column="company_name" property="companyName" jdbcType="VARCHAR" />
		<result column="company_addr" property="companyAddress"
			jdbcType="VARCHAR" />
		<result column="company_mobile" property="companyPhone"
			jdbcType="VARCHAR" />
		<result column="created_time" property="createTime" jdbcType="TIMESTAMP" />
		<result column="created_by" property="createBy" jdbcType="VARCHAR" />
		<result column="modified_date" property="modifiedDate"
			jdbcType="TIMESTAMP" />
		<collection property="departments" javaType="java.util.ArrayList" ofType="com.menjin.company.model.Department">
			<id column="dep_id" property="id" jdbcType="INTEGER" javaType="java.lang.Integer" />
			<result column="department_name" property="departmentName"
				jdbcType="VARCHAR" />
			<result column="department_header" property="departmentHeader"
				jdbcType="VARCHAR" />
			<result column="department_phone" property="departmentPhone"
				jdbcType="VARCHAR" />
			<result column="created_time" property="createTime" jdbcType="TIMESTAMP" />
			<result column="created_by" property="createBy" jdbcType="VARCHAR" />
			<result column="modified_date" property="modifiedDate"
				jdbcType="TIMESTAMP" />
		</collection>
	</resultMap>

	<sql id="insertList">
		company_name,company_addr,company_mobile,created_time,
		created_by,modified_date
	</sql>

	<sql id="columnList">
		id,company_name,company_addr,company_mobile,created_time,
		created_by,modified_date
	</sql>


	<insert id="insert" parameterType="com.menjin.company.model.Company"
		useGeneratedKeys="true" keyColumn="id">
		INSERT INTO t_company(
		<include refid="insertList" />
		) VALUES (
		#{companyName}, #{companyAddress}, #{companyPhone},
		#{createTime}, #{createBy}, #{modifiedDate})
	</insert>

	<update id="updateByPrimaryKey" parameterType="com.menjin.company.model.Company">
		UPDATE t_company
		SET company_name = #{companyName},company_addr = #{companyAddress},
		company_mobile = #{companyPhone}, created_time = #{createTime},
		created_by = #{createBy},modified_date = #{modifiedDate}
		WHERE id=#{id}
	</update>

	<select id="selectByPrimaryKey" parameterType="com.menjin.company.model.Company"
		resultMap="resultMap">
		SELECT
		<include refid="columnList" />
		FROM t_company WHERE id = #{id}
	</select>

	<select id="selectAllAndDepartment"  resultMap="resultDepartmentMap">
		SELECT c.id as com_id,c.company_name,d.id as dep_id,d.department_name
		FROM t_company c LEFT JOIN t_department d ON c.id = d.company_id
	</select>

	<delete id="deleteByPrimaryKey" parameterType="com.menjin.company.model.Company">
		DELETE FROM
		t_company WHERE id=#{id}
	</delete>

	<select id="selectCount" resultType="java.lang.Integer">
		SELECT COUNT(1) FROM t_company WHERE 1 = 1
	</select>

	<select id="selectByPage" resultMap="resultMap">
		SELECT
		t1.*
		FROM t_company t1
		INNER JOIN
		(
		SELECT id FROM t_company WHERE 1 = 1
		<if test="null!=page and null!=page.pageSize">
			LIMIT #{page.startRowNum}, #{page.pageSize}
		</if>
		) AS t2
		ON t1.id = t2.id
		WHERE 1 = 1
		<if test="null != orderByField">
			ORDER BY #{orderByField}
		</if>
	</select>

</mapper>  